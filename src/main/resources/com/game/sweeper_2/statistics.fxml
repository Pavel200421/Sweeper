<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.game.sweeper_2.StatisticsController">
    <Label text="Game Statistics" styleClass="StatsTitle" />
    <Label fx:id="gamesPlayedLabel" />
    <Label fx:id="gamesWonLabel" />
    <Label fx:id="gamesLostLabel" />
    <Label fx:id="bestTimeLabel" />
    <Label text="High Scores" styleClass="StatsTitle" />
    <VBox fx:id="highScoresVBox" />
    <Button text="Close" onAction="#handleClose" />
</VBox>
