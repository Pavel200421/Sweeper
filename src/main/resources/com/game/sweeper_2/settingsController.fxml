<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="settingsControllerWindow" prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.game.sweeper_2.SettingsController">
   <children>
      <Label styleClass="SettingsLabelTitle" text="Settings" />
      <Label styleClass="SettingsLabelSubtitle" text="Number of Mines:" />
      <TextField styleClass="text-field" fx:id="minesField" />
      <Label styleClass="SettingsLabelSubtitle" text="Rows:" />
      <TextField styleClass="text-field" fx:id="rowsField" />
      <Label styleClass="SettingsLabelSubtitle" text="Columns:" />
      <TextField styleClass="text-field" fx:id="colsField" />
      <Button styleClass="SettingsBtnApply"  text="Apply" onAction="#applySettings" fx:id="applySettings" />
   </children>
</VBox>
