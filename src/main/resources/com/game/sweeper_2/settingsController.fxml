<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.game.sweeper_2.SettingsController">
   <children>
      <Label text="Settings" />
      <Label text="Number of Mines:" />
      <TextField fx:id="minesField" />
      <Label text="Rows:" />
      <TextField fx:id="rowsField" />
      <Label text="Columns:" />
      <TextField fx:id="colsField" />
      <Button  text="Apply" onAction="#applySettings" fx:id="applySettings" />
   </children>
</VBox>
