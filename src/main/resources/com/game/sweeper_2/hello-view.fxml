<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.game.sweeper_2.HelloController">
   <children>
      <Label visible="false" fx:id="MineCounter" text="Mines: 20" />
      <Button fx:id="ResetBtn" text="Reset" visible="false" onAction="#handleReset" />
      <GridPane fx:id="mainPane" style="-fx-background-color: lightgrey;" />
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="NewGameBtn" text="New Game" onAction="#handleNewGame" />
         </children>
      </VBox>
   </children>
</VBox>
